@using DavinoComputers.Common
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        @if (this.User.IsInRole(DavinoComputers.Common.GlobalConstants.AdministratorRoleName))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Add">Add Product</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="PcBuilds" asp-action="Add">Add Pc Build</a>
                            </li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="/Products/All?Category=Hardware" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Hardware
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="/Products/All?Category=Hardware">All Hardware</a>
                                <a class="dropdown-item" href="/Products/All?Category=Hardware&SubCategory=Mother+Boards">Mother Boards</a>
                                <a class="dropdown-item" href="/Products/All?Category=Hardware&SubCategory=CPU">CPU</a>
                                <a class="dropdown-item" href="/Products/All?Category=Hardware&SubCategory=GPU">GPU</a>
                                <a class="dropdown-item" href="/Products/All?Category=Hardware&SubCategory=RAM">RAM</a>
                                <a class="dropdown-item" href="/Products/All?Category=Hardware&SubCategory=SSD">SSD</a>
                                <a class="dropdown-item" href="/Products/All?Category=Hardware&SubCategory=HDD">HDD</a>
                                <a class="dropdown-item" href="/Products/All?Category=Hardware&SubCategory=Power+Supply">Power Supply</a>
                                <a class="dropdown-item" href="/Products/All?Category=Hardware&SubCategory=Computer+Cases">Computer Cases</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Accessories
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="/Products/All?Category=Accessories">All Hardware</a>
                                <a class="dropdown-item" href="/Products/All?Category=Accessories&SubCategory=Mouses">Mouses</a>
                                <a class="dropdown-item" href="/Products/All?Category=Accessories&SubCategory=Keyboards">Keyboards</a>
                                <a class="dropdown-item" href="/Products/All?Category=Accessories&SubCategory=HeadSet">HeadSet</a>
                                <a class="dropdown-item" href="/Products/All?Category=Accessories&SubCategory=Mouse+Pads">Mouse Pads</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Products" asp-action="All">PC Builds</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @GlobalConstants.SystemName
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
