@model HomeViewModel

@{ this.ViewData["Title"] = "Wellcome!"; }


@if (!Model.CarouselProducts.Any())
{
<div class="jumbotron">
    <h1 class="display-4">This is one of the best websites for buy products for computers</h1>
    <hr class="my-4">
    <p>There is no products right now</p>
    <a asp-controller="Products" asp-action="All" class="btn btn-primary btn-lg" role="button">See our other products</a>
</div>}

<h1 class="text-center border-bottom">Wellcome to DComputers</h1>

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide mb-3"  data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.CarouselProducts.Count; i++)
        {
            var product = Model.CarouselProducts[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                    <img class="d-block w-50 mx-auto" src="@product.ImageUrl" alt="@product.Brand @product.Model">
                </a>
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Brand @product.Model</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="text-center">
    <h2 class="text-center mt-5">We Have :</h2>
    <div class="col-md-4 offset-md-4">
        <a asp-controller="Products" asp-action="All" class="list-group-item list-group-item-action">Products : @Model.ProductsCounts</a>
    </div>
</div>
